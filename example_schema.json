{
  "title": "Pet Registration",
  "type": "object",
  "properties": {
    "pet_type": {
      "type": "string",
      "enum": ["dog", "cat"],
      "title": "Pet Type"
    },
    "details": {
      "title": "Details",
      "if": {
        "properties": {
          "pet_type": { "const": "dog" }
        }
      },
      "then": {
        "properties": {
          "breed": {
            "type": "string",
            "title": "Dog Breed"
          },
          "trained": {
            "type": "boolean",
            "title": "Trained?"
          }
        },
        "required": ["breed"]
      },
      "else": {
        "properties": {
          "indoor": {
            "type": "boolean",
            "title": "Indoor Cat?"
          },
          "color": {
            "type": "string",
            "title": "Fur Color"
          }
        },
        "required": ["indoor"]
      },
      "type": "object"
    }
  },
  "required": ["pet_type"]
}
